<div class="elevated my-5 p-4">
  
  <%= form_tag url_for(controller: "questions", action: "index"), method: :get, id: "start-quiz-form" do  %>
    <div class="d-flex justify-content-between border-bottom border-dark mb-2">
      <strong>Categories</strong>
      <div class="w-25">
        <%@chooseable_categories.each do |category| %>
          <label>
            <%= check_box_tag "categories[]", category, (@categories.include?(category) ? true : nil) %>
            <%=category%>
          </label></br>
        <%end%>
      </div>
    </div>
    <div class="d-flex justify-content-between border-bottom border-dark mb-2">
      <strong>Diffuclty</strong>
      <div class="w-25">
        <label>
          <%=radio_button_tag 'difficulty', 'Easy', (@difficulty=='Easy' or @difficulty.nil?)%>
          Easy
        </label></br>
        <label>
          <%=radio_button_tag 'difficulty', 'Medium', (@difficulty=='Medium')%>
          Medium
        </label></br>
        <label>
          <%=radio_button_tag 'difficulty', 'Hard', (@difficulty=='Hard')%>
          Hard
        </label></br>
      </div>
    </div>
    
  
    <!--Slider from https://mdbootstrap.com/docs/b4/jquery/forms/slider/-->
    <div class="d-flex justify-content-between align-items-center my-4">
      <strong>Number of questions</strong>
      <div class="w-50 d-flex justify-content-end">
        <input type="range" class="custom-range w-75" name="num_questions" value="<%=@num_questions%>" id="customRange11" min="4" max="8">
        <span class="font-weight-bold text-light ml-2 valueSpan2"></span>
      </div>
    </div>
      
    <%= submit_tag "Start quiz", id: "start-btn", class:"w-100 btn-outline-light" %>
  <%end%>
  
  <div class="d-flex justify-content-center">
    <%= button_to "View quiz history", url_options={controller: "pages", action: "history"},  method: :get, class: "mt-5 btn-outline-info"%>
  </div>

  
</div>
